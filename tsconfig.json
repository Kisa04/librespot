{
	"include": ["index.d.ts", "@types", "src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "build"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2016",
		"module": "ES6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"outDir": "build",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"strictFunctionTypes": true
	}
}
