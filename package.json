{
	"name": "librespot",
	"version": "0.0.1",
	"description": "A FOSS Spotify library.",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"copy-files": "rm -rf ./build/proto && cp -r ./src/proto ./build/proto",
		"build": "tsc -p tsconfig.json && npm run copy-files",
		"postinstall": "npm run build",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"author": "hazycora",
	"license": "MIT",
	"dependencies": {
		"debug": "^4.1.1",
		"fast-xml-parser": "^4.1.1",
		"node-fetch": "^2.3.0",
		"protobufjs": "^7.2.1",
		"shannon-bindings": "^0.1.0"
	},
	"devDependencies": {
		"@types/node-fetch": "^2.6.2",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.7.0",
		"prettier": "^2.8.4",
		"dotenv": "^16.0.3",
		"typescript": "^4.9.5"
	}
}
